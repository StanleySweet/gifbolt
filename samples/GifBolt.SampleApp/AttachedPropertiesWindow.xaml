<Window x:Class="GifBolt.SampleApp.AttachedPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="clr-namespace:GifBolt.Wpf;assembly=GifBolt.Wpf"
        Title="GifBolt - Attached Properties Demo" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="10" FontSize="16" FontWeight="Bold">
            GifBolt - Attached Properties (WpfAnimatedGif compatible)
        </TextBlock>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Example 1: Simple animated source -->
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Simple (AutoStart, 0x = metadata)" Margin="5" FontWeight="Bold"/>
                    <Image gif:ImageBehavior.AnimatedSource="sample.gif"
                           gif:ImageBehavior.AutoStart="True"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Example 2: Repeat 3 times -->
            <Border Grid.Row="0" Grid.Column="2" BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Repeat 3 times" Margin="5" FontWeight="Bold"/>
                    <Image x:Name="ImageRepeat3x"
                           gif:ImageBehavior.AnimatedSource="sample.gif"
                           gif:ImageBehavior.RepeatBehavior="3x"
                           gif:ImageBehavior.AutoStart="True"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Example 3: Loop forever -->
            <Border Grid.Row="2" Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Loop forever" Margin="5" FontWeight="Bold"/>
                    <Image gif:ImageBehavior.AnimatedSource="sample.gif"
                           gif:ImageBehavior.RepeatBehavior="Forever"
                           gif:ImageBehavior.AutoStart="True"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Example 4: Manual start -->
            <Border Grid.Row="2" Grid.Column="2" BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Manual start (AutoStart=False)" Margin="5" FontWeight="Bold"/>
                    <Image x:Name="ImageManual"
                           gif:ImageBehavior.AnimatedSource="sample.gif"
                           gif:ImageBehavior.AutoStart="False"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button Content="Load GIF..." Width="100" Margin="5" Click="OnLoadGif"/>
            <TextBlock Text="Note: Currently manual control on attached properties is limited. Use GifBoltControl for full API."
                       VerticalAlignment="Center" Margin="10,0" FontStyle="Italic" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
