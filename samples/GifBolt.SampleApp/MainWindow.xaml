<Window x:Class="GifBolt.SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gifbolt="clr-namespace:GifBolt.Wpf;assembly=GifBolt.Wpf"
        Title="GifBolt Sample" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="10" FontSize="16" FontWeight="Bold">
            GifBolt - High-Performance DirectX GIF Renderer
        </TextBlock>

        <Border Grid.Row="1" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <gifbolt:GifBoltControl x:Name="GifControl"
                                   Source="sample.gif"
                                   AutoStart="True"
                                   Loop="True"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"/>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button Content="Play" Width="80" Margin="5" Click="OnPlay"/>
            <Button Content="Pause" Width="80" Margin="5" Click="OnPause"/>
            <Button Content="Stop" Width="80" Margin="5" Click="OnStop"/>
            <Button Content="Load GIF..." Width="100" Margin="5" Click="OnLoadGif"/>
        </StackPanel>
    </Grid>
</Window>
