<Window x:Class="GifBolt.SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gifbolt="clr-namespace:GifBolt.Wpf;assembly=GifBolt.Wpf"
        Title="GifBolt Sample" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="10" FontSize="16" FontWeight="Bold">
            GifBolt - High-Performance DirectX GIF Renderer
        </TextBlock>

        <Border Grid.Row="1" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <gifbolt:GifBoltControl x:Name="GifControl"
                                   Source="sample.gif"
                                   AutoStart="True"
                                   Loop="True"
                                   ScalingFilter="Lanczos"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"/>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Scaling Filter:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <ComboBox x:Name="filterComboBox" SelectedIndex="3" Width="120" SelectionChanged="OnFilterChanged">
                    <ComboBoxItem Content="Nearest"/>
                    <ComboBoxItem Content="Bilinear"/>
                    <ComboBoxItem Content="Bicubic"/>
                    <ComboBoxItem Content="Lanczos"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Play" Width="80" Margin="5" Click="OnPlay"/>
                <Button Content="Pause" Width="80" Margin="5" Click="OnPause"/>
                <Button Content="Stop" Width="80" Margin="5" Click="OnStop"/>
                <Button Content="Load GIF..." Width="100" Margin="5" Click="OnLoadGif"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
